<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/getstarted_illustartor"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prove pass-out of the appliance and gadgest such laptop , also varity of services and information"
            android:textColor="@color/owncolor"
            android:fontFamily="@font/poppiesregular"
            android:textSize="22dp"/>
        <Button
           android:id="@+id/startbntId"
            android:layout_margin="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:text="GET STARTED"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>