<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".nav">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="50dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_margin="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back  "
                        android:textColor="@color/owncolor"
                        android:fontFamily="@font/poppinsmedium"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/notifications"
                        android:layout_marginLeft="120dp"
                        android:layout_gravity="right"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/getstarted_illustartor"
                    android:layout_gravity="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_margin="20dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/openpassactivityId"
                        android:layout_width="180dp"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="1500dp"
                        android:layout_gravity="left"
                        app:cardMaxElevation="15000dp"
                        android:layout_height="150dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/passoutgenerate" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Pass-out"
                                android:layout_marginTop="40dp"
                                android:textColor="@color/owncolor"
                                android:textSize="15dp" />


                        </FrameLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:id="@+id/openStudentCardctivityId"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="1500dp"
                        android:layout_gravity="right"
                        app:cardMaxElevation="15000dp"
                        android:layout_height="150dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/studentcardicon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Student Card"
                                android:layout_marginTop="40dp"
                                android:textColor="@color/owncolor"
                                android:textSize="15dp" />


                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_margin="20dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/openMuStuffctivityId"
                        android:layout_width="180dp"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="1500dp"
                        android:layout_gravity="left"
                        app:cardMaxElevation="15000dp"
                        android:layout_height="150dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/suitcase" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="My stuff"
                                android:layout_marginTop="40dp"
                                android:textColor="@color/owncolor"
                                android:textSize="15dp" />


                        </FrameLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/openGoodsctivityId"
                        android:layout_width="180dp"
                        android:layout_margin="2dp"
                        app:cardCornerRadius="20dp"
                        android:elevation="1500dp"
                        android:layout_gravity="right"
                        app:cardMaxElevation="15000dp"
                        android:layout_height="150dp">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/box" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Stolen goods"
                                android:layout_marginTop="40dp"
                                android:textColor="@color/owncolor"
                                android:textSize="15dp" />


                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </FrameLayout>










            </LinearLayout>


        </ScrollView>
        
        
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>