<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StolenGoodsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="7dp"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <ImageView
                android:id="@+id/back_home_4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/left_arrow"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stolen Goods"
                android:layout_gravity="center"
                android:textColor="@color/owncolor"
                android:fontFamily="@font/poppinsbold"
                android:textAlignment="center"
                android:textSize="20dp" />


        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/stolen_goods"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*No report of the stolen goods at the moment in the campus"
            android:textColor="#000000"
            android:fontFamily="@font/poppiesregular"
            android:textSize="17sp"
            android:layout_marginTop="25dp"/>


    </LinearLayout>

</LinearLayout>